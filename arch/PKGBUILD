# Maintainer: xylosper <darklin20@gmail.com>

pkgname=('cmplayer')
pkgver=0.5.4
pkgrel=1
arch=('i686' 'x86_64')
url="http://code.google.com/p/$pkgname"
license=('GPL')
depends=('qt>=4.7' 'vlc>=1.1')
makedepends=('git' 'gcc>=4.6')

build() {
	cd $srcdir
	git clone $url $pkgname-$pkgver
	cd $pkgname-$pkgver
	git checkout $pkgver
	make PREFIX=/usr all || return 1
}

package() {
	pkgdesc="CMPlayer is a multimedia player."
	cd "$srcdir/$pkgname-$pkgver"
	make DEST_DIR=$pkgdir PREFIX=/usr install || return 1
}
