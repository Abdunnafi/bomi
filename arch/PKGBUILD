# Maintainer: xylosper <darklin20@gmail.com>
# Contributor: willemw <willemw12@gmail.com>

pkgname=('cmplayer')
pkgver=0.7.5
pkgrel=1
pkgdesc="A powerful and easy-to-use multimedia player"
arch=('i686' 'x86_64')
url="https://code.google.com/p/$pkgname"
license=('GPL')
depends=('qt5-base' 'qt5-declarative' 'qt5-x11extras' 'icu' 'libdvdread' 'libcdio-paranoia' 'libcdio' 'libquvi' 'openal' 'alsa-lib' 'mpg123' 'libva' 'libgl' 'harfbuzz' 'fribidi' 'libass')
makedepends=('git' 'mesa' 'gcc' 'yasm')
source=(https://github.com/xylosper/cmplayer/releases/0.7.5/1066/cmplayer-$pkgver.tar.gz)
md5sums=('80f9703418e040972b897036aab8e695')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./build-libchardet
  ./build-ffmpeg
  ./build-mpv
  make PREFIX=/usr cmplayer
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DEST_DIR=$pkgdir PREFIX=/usr install
}
