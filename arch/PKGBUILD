# Maintainer: xylosper <darklin20@gmail.com>

pkgname=('cmplayer')
pkgver=0.7.4
pkgrel=1
arch=('i686' 'x86_64')
url="https://code.google.com/p/$pkgname"
license=('GPL')
depends=('qt5-base' 'qt5-declarative' 'icu' 'libdvdread' 'libcdio-paranoia' 'libcdio' 'libquvi' 'openal' 'alsa-lib' 'mpg123' 'libva' 'libgl' 'yasm')
makedepends=('git' 'mesa' 'gcc')
source=(http://cmplayer.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('3052b79669fabac8250353a573f80214')

build() {
	cd $srcdir/$pkgname-$pkgver
	./build-libchardet && ./build-ffmpeg && ./build-mpv && \
	make PREFIX=/usr cmplayer || return 1
}

package() {
	pkgdesc="CMPlayer is a multimedia player."
	cd "$srcdir/$pkgname-$pkgver"
	make DEST_DIR=$pkgdir PREFIX=/usr install || return 1
}
